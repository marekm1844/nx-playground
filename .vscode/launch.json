{
  "version": "0.2.0",
  "configurations": [
      {
          "name": "Debug Backend",
          "type": "node",
          "request": "launch",
          "args": [
            "apps/nx-nest-playground/src/main.ts"
          ],
          "runtimeArgs": [
            "--require",
            "ts-node/register",
            "--require",
            "tsconfig-paths/register",
          ],
          "cwd": "${workspaceRoot}",
          "envFile": "${workspaceFolder}/apps/nx-nest-playground/.env",
          "internalConsoleOptions": "openOnSessionStart",
          "env": {
            "NODE_ENV": "local",
            "NODE_PORT": "3000",
            "TS_NODE_PROJECT": "apps/nx-nest-playground/tsconfig.app.json", // Specify the tsconfig to use
          },
          "sourceMaps": true,
          "console": "internalConsole",
          "outputCapture": "std",
          "resolveSourceMapLocations": [
            "${workspaceFolder}/**",
            "!**/node_modules/**" // Disable the "could not read source map" error for node_modules
          ]
        }
  ]
}